{
	"name": "server",
	"version": "1.0.0",
	"description": "",
	"main": "../server/dist/app.js",
	"scripts": {
		"start": "tsc && node -r dotenv/config ../server/dist/app.js",
		"lint": "eslint --ignore-path .eslintignore --ext .js .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"db:migration:create": "mikro-orm migration:create --blank",
		"db:migrate": "mikro-orm migration:up",
		"db:migrate:undo": "mikro-orm migration:down",
		"db:migrate:undo:all": "mikro-orm migration:down --to 0",
		"db:migrate:fresh": "mikro-orm migration:fresh",
		"db:seed": "mikro-orm seeder:run --class=DatabaseSeeder",
		"db:drop": "mikro-orm schema:drop -r --drop-migrations-table",
		"db:fresh": "npm run db:drop && npm run db:migrate && npm run db:seed",
		"db:seed:create": "mikro-orm seeder:create"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@mikro-orm/core": "^5.6.8",
		"@mikro-orm/knex": "^5.6.8",
		"@mikro-orm/migrations": "^5.6.8",
		"@mikro-orm/postgresql": "^5.6.8",
		"@mikro-orm/reflection": "^5.6.8",
		"@mikro-orm/seeder": "^5.6.8",
		"@tsed/mikro-orm": "^7.13.6",
		"@types/bcryptjs": "^2.4.2",
		"@types/body-parser": "^1.19.2",
		"@types/cors": "^2.8.13",
		"@types/helmet": "^4.0.0",
		"bcryptjs": "^2.4.3",
		"bluebird": "^3.7.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"eslint-config-semistandard": "^17.0.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.0.1",
		"express": "^4.18.2",
		"helmet": "^6.0.1",
		"http-status-codes": "^2.2.0",
		"jsonwebtoken": "^9.0.0",
		"knex": "^2.4.2",
		"ts-node": "^10.9.1"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^5.4.2",
		"@trivago/prettier-plugin-sort-imports": "^4.0.0",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.11.19",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.4",
		"typescript": "^4.9.5"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"src/database/mikro-orm.config.ts"
		]
	}
}
